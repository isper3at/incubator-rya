<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
            jaxb:version="2.0"
            xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
            jaxb:extensionBindingPrefixes="xjc"
            xmlns:mc="http://mergeconfig"
            targetNamespace="http://mergeconfig">
    <xsd:annotation>
        <xsd:appinfo>
            <jaxb:globalBindings>
                <xjc:simple />
            </jaxb:globalBindings>
        </xsd:appinfo>
    </xsd:annotation>
    <xsd:element name="MergeToolConfiguration" type="mc:MergeToolConfiguration"/>

    <xsd:complexType name="MergeToolConfiguration">
        <xsd:sequence>
            <xsd:element name="parent" type="mc:Connection" maxOccurs="1"/>
            <xsd:element name="child" type="mc:Connection" maxOccurs="1"/>

            <xsd:element name="tomcatUrl" type="xsd:string"/>
            <xsd:element name="startTime" type="xsd:long"/>
            <xsd:element name="useNtpServer" type="xsd:boolean"/>
            <xsd:element name="ntpServerHost" type="xsd:string" minOccurs="0"/>
        </xsd:sequence>
    </xsd:complexType>
    
    <xsd:complexType name="Connection">
        <xsd:sequence>
            <xsd:element name="ryaInstanceName" type="xsd:string"/>
            <xsd:element name="mongo" type="mc:Mongo" minOccurs="0"/>
            <xsd:element name="accumulo" type="mc:Accumulo" minOccurs="0"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:simpleType name="Port">
      <xsd:annotation>
        <xsd:documentation>
          Port number in the range [1, 65536).
        </xsd:documentation>
      </xsd:annotation>

      <xsd:restriction base="xsd:unsignedShort">
        <xsd:minInclusive value="1"/>
        <xsd:maxInclusive value="65535"/>
      </xsd:restriction>
    </xsd:simpleType>

    <!-- Mongo configurations -->
    <xsd:complexType name="Mongo">
        <xsd:sequence>
            <xsd:element name="hostname" type="xsd:string"/>
            <xsd:element name="username" type="xsd:string" minOccurs="0"/>
            <xsd:element name="password" type="xsd:string" minOccurs="0"/>
            <xsd:element name="tablePrefix" type="xsd:string"/>
            <xsd:element name="port" type="mc:Port"/>
        </xsd:sequence>
    </xsd:complexType>

    <!-- Accumulo configurations -->
    <xsd:complexType name="Accumulo">
        <xsd:sequence>
            <xsd:element name="hostname" type="xsd:string"/>
            <xsd:element name="username" type="xsd:string" minOccurs="0"/>
            <xsd:element name="password" type="xsd:string" minOccurs="0"/>
            <xsd:element name="tablePrefix" type="xsd:string"/>
            <xsd:element name="port" type="mc:Port"/>
            <xsd:element name="zookeepers" type="xsd:string" minOccurs="0"/>
            <xsd:element name="auths" type="xsd:string" minOccurs="0"/>
            <xsd:element name="instanceType" type="mc:InstanceType"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:simpleType name="InstanceType">
      <xsd:restriction base="xsd:string">
        <xsd:enumeration value="mock"/>
        <xsd:enumeration value="mini"/>
        <xsd:enumeration value="distribution"/>
      </xsd:restriction>
    </xsd:simpleType>
</xsd:schema>